<div>
    <h1><%=title%></h1>

    <form action = "/users/login" method = "POST">
        <input 
            type = "text" 
            name = "username" 
            placeholder = "username"
        >

        <input
            type = "password"
            name = "password"
            placeholder = "password"
        >

        <button type ="submit"></button>
    </form>

    <a href = "/users/register">Register</a>
</div>

