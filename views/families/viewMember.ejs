<%- include("../partials/header.ejs", {title, styles: [
    "viewMember.css"
]}) %>

<div class = "log">
    <h1><%= title %></h1>

    <p>Gender: <%= member.member.gender %></p>

    <% if(member.member.birthday) { %>
        <p><%= member.member.birthday.toDateString() %></p>
    <% } %>

    <div id = "options">
        <a href = "/families/<%= family._id %>/<%= member._id %>/edit">
            <button>Edit</button>
        </a>

        <a href = <%= `/families/${req.params.familyTarget}/${member.slug}/addToMember` %>>
            <button>Add Descendant</button>
        </a>

        <form
            action = "/families/<%= family._id %>/<%= member._id %>/deleteMember?_method=DELETE"
            method = "POST"
        >
            <button type = "submit">Delete Member</button>
        </form>

        <form
            action = "/families/<%= family._id %>/<%= member._id %>/deleteMemberAndDescendants?_method=DELETE"
            method = "POST"
        >
            <button type = "submit">Delete Member and Descendants</button>
        </form>
        
        <a href = <%= `/families/${req.params.familyTarget}` %>>
            <button>Back to Family</button>
        </a>        
    </div>

</div>

<%- include("../partials/footer.ejs", {scripts: undefined}) %>