<%- include("../partials/header.ejs", {title}) %>

<h1><%= title %></h1>

<form
    action = "/families/<%= family._id %>/edit"
    method = "GET"
>
    <button type = "submit">Edit</button>
</form>

<a href = <%= `/families/${req.params.familyTarget}/addToRoot` %>>Add Member</a>

<% if(members) { 
    members.forEach(member => { 
        if(member) { %>
            <%- include("../components/listMember.ejs", {req, member}) %>
        <% } 
    })
} %>

<a href = <%= `/families` %>>
    <button>Back to Families</button>
</a>

<%- include("../partials/footer.ejs", {scripts: undefined}) %>