<div>
    <a href = "/families/<%= family.slug %>/<%= member.slug %>">
        <%= member.member.firstname %> <%= member.member.lastname %>
    </a>

    <form
        action = "/families/<%= family._id %>/<%= member._id %>/edit"
        method = "GET"
    >
        <button type = "submit">Edit</button>
    </form>

    <form
        action = "/families/<%= family._id %>/<%= member._id %>/deleteMemberAndDescendants?_method=DELETE"
        method = "POST"
    >
        <button type = "submit">Delete</button>
    </form>
</div>